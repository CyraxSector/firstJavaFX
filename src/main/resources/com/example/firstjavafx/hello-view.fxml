<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="287.0" prefWidth="364.0" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.firstjavafx.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <MenuBar>
     <menus>
       <Menu mnemonicParsing="false" text="File">
         <items>
           <MenuItem fx:id="closeButton" mnemonicParsing="false" onAction="#onCloseMenuClick" text="Close" />
         </items>
       </Menu>
       <Menu mnemonicParsing="false" text="Edit">
         <items>
           <MenuItem fx:id="editButton" mnemonicParsing="false" onAction="#onLoginButtonClick" text="Login" />
         </items>
       </Menu>
       <Menu mnemonicParsing="false" text="Help">
         <items>
           <MenuItem mnemonicParsing="false" text="About" />
         </items>
       </Menu>
     </menus>
   </MenuBar>

  <Label fx:id="welcomeText" />
   <TextField />
   <PasswordField />
  <Button onAction="#onHelloButtonClick" prefHeight="25.0" prefWidth="340.0" text="Hello!" VBox.vgrow="ALWAYS" />
   <Button fx:id="loginText" mnemonicParsing="false" onAction="#onLoginButtonClick" prefHeight="25.0" prefWidth="357.0" text="Login" />
</VBox>
